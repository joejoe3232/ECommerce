@model ECommerceApp.Models.Order

@{
    ViewData["Title"] = "訂單詳情";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-shopping-cart text-primary"></i> 訂單詳情
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>訂單資訊</h5>
                            <dl class="row">
                                <dt class="col-sm-4">訂單編號</dt>
                                <dd class="col-sm-8"><strong>@Model.OrderNumber</strong></dd>
                                
                                <dt class="col-sm-4">訂單日期</dt>
                                <dd class="col-sm-8">@Model.OrderDate.ToString("yyyy/MM/dd HH:mm")</dd>
                                
                                <dt class="col-sm-4">訂單狀態</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var statusClass = Model.Status switch
                                        {
                                            OrderStatus.Pending => "badge-warning",
                                            OrderStatus.Processing => "badge-info",
                                            OrderStatus.Shipped => "badge-primary",
                                            OrderStatus.Delivered => "badge-success",
                                            OrderStatus.Cancelled => "badge-danger",
                                            _ => "badge-secondary"
                                        };
                                        
                                        var statusText = Model.Status switch
                                        {
                                            OrderStatus.Pending => "待處理",
                                            OrderStatus.Processing => "處理中",
                                            OrderStatus.Shipped => "已出貨",
                                            OrderStatus.Delivered => "已送達",
                                            OrderStatus.Cancelled => "已取消",
                                            _ => Model.Status.ToString()
                                        };
                                    }
                                    <span class="badge @statusClass">@statusText</span>
                                </dd>
                                
                                <dt class="col-sm-4">總金額</dt>
                                <dd class="col-sm-8">
                                    <span class="font-weight-bold text-success">NT$ @Model.TotalAmount.ToString("N0")</span>
                                </dd>
                            </dl>
                        </div>
                        
                        <div class="col-md-6">
                            <h5>客戶資訊</h5>
                            <dl class="row">
                                <dt class="col-sm-4">客戶姓名</dt>
                                <dd class="col-sm-8">@Model.CustomerName</dd>
                                
                                <dt class="col-sm-4">客戶信箱</dt>
                                <dd class="col-sm-8">@Model.CustomerEmail</dd>
                                
                                <dt class="col-sm-4">客戶電話</dt>
                                <dd class="col-sm-8">@Model.CustomerPhone</dd>
                                
                                <dt class="col-sm-4">送貨地址</dt>
                                <dd class="col-sm-8">@Model.ShippingAddress</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <h5>備註</h5>
                                <p class="text-muted">@Model.Notes</p>
                            </div>
                        </div>
                    }

                    <div class="row mt-3">
                        <div class="col-12">
                            <h5>訂單項目</h5>
                            @if (Model.OrderItems != null && Model.OrderItems.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>產品名稱</th>
                                                <th>數量</th>
                                                <th>單價</th>
                                                <th>小計</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.OrderItems)
                                            {
                                                <tr>
                                                    <td>@item.Product?.Name</td>
                                                    <td>@item.Quantity</td>
                                                    <td>NT$ @item.UnitPrice.ToString("N0")</td>
                                                    <td>NT$ @item.TotalPrice.ToString("N0")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-3">
                                    <i class="fas fa-box-open fa-2x text-muted mb-2"></i>
                                    <p class="text-muted">此訂單尚未添加任何產品項目</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">操作選項</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> 編輯訂單
                        </a>
                        
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> 返回列表
                        </a>
                        
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> 刪除訂單
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
