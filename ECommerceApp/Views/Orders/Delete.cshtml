@model ECommerceApp.Models.Order

@{
    ViewData["Title"] = "刪除訂單";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> 確認刪除訂單
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>警告：</strong> 刪除訂單後將無法復原，此操作會同時刪除所有相關的訂單項目。
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <h5>訂單資訊</h5>
                            <dl class="row">
                                <dt class="col-sm-4">訂單編號</dt>
                                <dd class="col-sm-8"><strong>@Model.OrderNumber</strong></dd>
                                
                                <dt class="col-sm-4">訂單日期</dt>
                                <dd class="col-sm-8">@Model.OrderDate.ToString("yyyy/MM/dd HH:mm")</dd>
                                
                                <dt class="col-sm-4">訂單狀態</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var statusClass = Model.Status switch
                                        {
                                            OrderStatus.Pending => "badge-warning",
                                            OrderStatus.Processing => "badge-info",
                                            OrderStatus.Shipped => "badge-primary",
                                            OrderStatus.Delivered => "badge-success",
                                            OrderStatus.Cancelled => "badge-danger",
                                            _ => "badge-secondary"
                                        };
                                        
                                        var statusText = Model.Status switch
                                        {
                                            OrderStatus.Pending => "待處理",
                                            OrderStatus.Processing => "處理中",
                                            OrderStatus.Shipped => "已出貨",
                                            OrderStatus.Delivered => "已送達",
                                            OrderStatus.Cancelled => "已取消",
                                            _ => Model.Status.ToString()
                                        };
                                    }
                                    <span class="badge @statusClass">@statusText</span>
                                </dd>
                                
                                <dt class="col-sm-4">總金額</dt>
                                <dd class="col-sm-8">
                                    <span class="font-weight-bold text-success">NT$ @Model.TotalAmount.ToString("N0")</span>
                                </dd>
                            </dl>
                        </div>
                        
                        <div class="col-md-6">
                            <h5>客戶資訊</h5>
                            <dl class="row">
                                <dt class="col-sm-4">客戶姓名</dt>
                                <dd class="col-sm-8">@Model.CustomerName</dd>
                                
                                <dt class="col-sm-4">客戶信箱</dt>
                                <dd class="col-sm-8">@Model.CustomerEmail</dd>
                                
                                <dt class="col-sm-4">客戶電話</dt>
                                <dd class="col-sm-8">@Model.CustomerPhone</dd>
                                
                                <dt class="col-sm-4">送貨地址</dt>
                                <dd class="col-sm-8">@Model.ShippingAddress</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <h5>備註</h5>
                                <p class="text-muted">@Model.Notes</p>
                            </div>
                        </div>
                    }

                    <div class="row mt-4">
                        <div class="col-12">
                            <form asp-action="Delete" method="post">
                                <input type="hidden" asp-for="Id" />
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> 確認刪除
                                    </button>
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i> 取消
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
