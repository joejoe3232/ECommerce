@model ECommerceApp.Models.Product

@{
    ViewData["Title"] = "新增產品";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle text-success"></i> @ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-3 col-form-label">產品名稱 <span class="text-danger">*</span></label>
                            <div class="col-sm-9">
                                <input asp-for="Name" class="form-control" placeholder="請輸入產品名稱">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Description" class="col-sm-3 col-form-label">產品描述 <span class="text-danger">*</span></label>
                            <div class="col-sm-9">
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="請輸入產品描述"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Price" class="col-sm-3 col-form-label">價格 <span class="text-danger">*</span></label>
                            <div class="col-sm-9">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">NT$</span>
                                    </div>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" placeholder="0.00">
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="StockQuantity" class="col-sm-3 col-form-label">庫存數量 <span class="text-danger">*</span></label>
                            <div class="col-sm-9">
                                <input asp-for="StockQuantity" class="form-control" type="number" min="0" placeholder="0">
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="CategoryId" class="col-sm-3 col-form-label">產品分類 <span class="text-danger">*</span></label>
                            <div class="col-sm-9">
                                <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                                    <option value="">請選擇分類</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="ImageUrl" class="col-sm-3 col-form-label">圖片網址</label>
                            <div class="col-sm-9">
                                <input asp-for="ImageUrl" class="form-control" type="url" placeholder="https://example.com/image.jpg">
                                <small class="form-text text-muted">請輸入產品圖片的網址</small>
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> 儲存
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> 返回列表
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
