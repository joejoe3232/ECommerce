@model IEnumerable<ECommerceApp.Models.Product>

@{
    ViewData["Title"] = "產品列表";
}

<div class="container-fluid">
    <h1 class="h3 mb-4">@ViewData["Title"]</h1>

    <!-- 搜尋和篩選區域 -->
    <div class="row mb-4">
        <div class="col-md-8">
            <form asp-action="Index" method="get" class="form-inline">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="搜尋產品..." value="@ViewBag.SearchString">
                    <select name="categoryId" class="form-control">
                        <option value="">所有分類</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id" @(ViewBag.SelectedCategoryId == category.Id ? "selected" : "")>
                                @category.Name
                            </option>
                        }
                    </select>
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">搜尋</button>
                        <a asp-action="Index" class="btn btn-secondary">清除</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4 text-right">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> 新增產品
            </a>
        </div>
    </div>

    <!-- 產品網格 -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    }
                    
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text text-muted">@item.Description</p>
                        
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="badge badge-primary">@item.Category?.Name</span>
                            <span class="text-success font-weight-bold">NT$ @item.Price.ToString("N0")</span>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">庫存: @item.StockQuantity</small>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">沒有找到產品</h4>
            <p class="text-muted">請嘗試調整搜尋條件或新增產品</p>
        </div>
    }
</div>
